{
  "manifest_version": 3,
  "name": "Comment Blocker for YouTube",
  "version": "1.0.2",
  "description": "Blocks comments from blackisted users or blacklisted words.",
  "permissions": ["storage","scripting"],
  "icons": {
    "16": "icons/CBY-Logo-16.png",
    "32": "icons/CBY-Logo-32.png",
    "48": "icons/CBY-Logo-48.png",
    "128": "icons/CBY-Logo-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Comment Blocker for YouTube Settings"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}